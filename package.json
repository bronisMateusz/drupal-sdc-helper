{
  "name": "drupal-sdc-autocomplete",
  "displayName": "Drupal SDC Autocomplete",
  "description": "Provides code autocomplete for Drupal's Single Directory Components",
  "version": "0.0.32",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onLanguage:twig",
    "workspaceContains:**/*.twig"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "drupalSDC.refreshIndex",
        "title": "Drupal SDC: Refresh Component Index"
      }
    ],
      "configuration": {
          "type": "object",
          "title": "Drupal SDC Extension Configuration",
          "properties": {
              "drupalSDC.componentDirectories": {
                  "type": "array",
                  "default": [
                      "web/themes/custom/*/components/**",
                      "web/modules/custom/*/components/**"
                  ],
                  "description": "An array of glob patterns to the component directories."
              }
          }
      }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "esbuild": "^0.23.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
